<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    android:gravity="top">

    <TextView
        android:id="@+id/reg_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="Register"
        android:textColor="@color/red"
        android:textSize="30sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/reg_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reg_id"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:id="@+id/layout_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_edit" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_first_name"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Name"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_edit" />
        </LinearLayout>

        <Button
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_last_name"
            android:layout_centerInParent="true"
            android:text="OK" />
    </RelativeLayout>


    <TextView
        android:id="@+id/one"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reg_layout"
        android:layout_marginTop="30sp"
        android:background="@color/white"
        android:gravity="center"
        android:text="1"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/two"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reg_layout"
        android:layout_marginTop="30sp"
        android:layout_toRightOf="@+id/one"
        android:background="@color/red"
        android:gravity="center"
        android:text="2"
        android:textSize="24sp" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/one"
        android:layout_alignStart="@+id/one"
        android:layout_alignEnd="@+id/two"
        android:background="@color/teal_700"
        android:gravity="center"
        android:text="3"
        android:textSize="24sp" />
</RelativeLayout>