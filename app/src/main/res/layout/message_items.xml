<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/teal_700"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/message_left_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:elevation="5dp"
            app:cardCornerRadius="360dp"
            app:cardElevation="5dp">

            <TextView
                android:id="@+id/contact_left_img_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#cccccc"
                android:gravity="center"
                android:text="@string/aa"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:background="@drawable/message_bubble_left"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/left_user_name_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Azizbek Mahmudjanov"
                android:textColor="@color/teal_700"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/left_message_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nima gap nima gap nima gap nima gap nima gap nima gap nima gap nima gap nima gap nima gap nima gap nima gap nima gap "
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/left_message_date_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="15:00"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/message_right_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <LinearLayout
            android:id="@+id/right_message_layout_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="50dp"
            android:background="@drawable/message_bubble_right"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/right_user_name_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Azizbek Mahmudjanov"
                android:textColor="@color/teal_700"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/right_message_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nima"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/right_message_date_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="15:00"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/right_message_layout_id"
            android:layout_gravity="bottom|end"
            android:layout_toEndOf="@+id/right_message_layout_id"
            android:elevation="5dp"
            app:cardCornerRadius="360dp"
            app:cardElevation="5dp">

            <TextView
                android:id="@+id/contact_right_img_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#cccccc"
                android:gravity="center"
                android:text="@string/aa"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>