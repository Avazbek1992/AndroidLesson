<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:padding="10dp">

        <EditText
            android:id="@+id/calc_edit"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:background="@null"
            android:maxLength="20"
            android:gravity="end|center_vertical"
            android:lines="1"
            android:singleLine="true"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="30sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/calc_c"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="c"
                android:textSize="25sp"
                app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.Button" />

            <Button
                android:id="@+id/calc_q"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="5dp"
                android:text="()"
                android:textSize="25sp"
                app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.Button" />

            <Button
                android:id="@+id/calc_p"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="5dp"
                android:text="%"
                android:textSize="25sp"
                app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.Button" />

            <Button
                android:id="@+id/calc_b"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="5dp"
                android:text="รท"
                android:textSize="25sp"
                app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.Button" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/calc_7"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="7"
                android:textSize="25sp"
                app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.Button" />

            <Button
                android:id="@+id/calc_8"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="5dp"
                android:text="8"
                android:textSize="25sp"
                app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.Button" />

            <Button
                android:id="@+id/calc_9"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="5dp"
                android:text="9"
                android:textSize="25sp"
                app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.Button" />

            <Button
                android:id="@+id/calc_x"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="5dp"
                android:text="x"
                android:textSize="25sp"
                app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.Button" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/calc_4"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="4"
                android:textSize="25sp"
                app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.Button" />

            <Button
                android:id="@+id/calc_5"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="5dp"
                android:text="5"
                android:textSize="25sp"
                app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.Button" />

            <Button
                android:id="@+id/calc_6"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="5dp"
                android:text="6"
                android:textSize="25sp"
                app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.Button" />

            <Button
                android:id="@+id/calc_m"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="5dp"
                android:text="-"
                android:textSize="25sp"
                android:textStyle="bold"
                app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.Button" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/calc_1"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="1"
                android:textSize="25sp"
                app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.Button" />

            <Button
                android:id="@+id/calc_2"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="5dp"
                android:text="2"
                android:textSize="25sp"
                app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.Button" />

            <Button
                android:id="@+id/calc_3"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="5dp"
                android:text="3"
                android:textSize="25sp"
                app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.Button" />

            <Button
                android:id="@+id/calc_plus"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="5dp"
                android:text="+"
                android:textSize="25sp"
                app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.Button" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/calc_pm"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="+/-"
                android:textSize="25sp"
                app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.Button" />

            <Button
                android:id="@+id/calc_0"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="5dp"
                android:text="0"
                android:textSize="25sp"
                app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.Button" />

            <Button
                android:id="@+id/calc_v"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="5dp"
                android:text=","
                android:textSize="25sp"
                app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.Button" />

            <Button
                android:id="@+id/calc_t"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="5dp"
                android:text="="
                android:textSize="25sp"
                app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.Button" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>